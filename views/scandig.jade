extends layout

block content
  h1= title
  p Welcome to #{title}

  p Scanning digits: #{digits}
  
  if mode
    p Mode is set to #{mode}
    button#button1 Start Search

  p
  
  script(src="/javascripts/jquery.min.js")
  
  script.
    var digits = "#{digits}";
    var minimum_cmu_digit_match = 2;
    
  script(src="/javascripts/procdigcmu.js")
      
  div#statusdiv
    p Status:-

  table#results_table(border='1')
    tr
      th Word
      th Phonemes
      th Major
      th Length
      th Position
      th CMU Index
      th Mapping
